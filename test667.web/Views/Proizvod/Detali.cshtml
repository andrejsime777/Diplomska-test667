@model test667.data.Models.Proizvod

@{
    Layout = "~/Views/Shared/_Layout_LoggedIn.cshtml";
    ViewBag.Title = "Детали за " + Model.ime;
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.kategorija)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.kategorija)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.kratok_opis)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.kratok_opis)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.dolg_opis)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dolg_opis)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.slika)
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model => model.slika)" height="200px" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cena)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cena) ден.
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.prospekt_link)
        </dt>

        <dd>
            <a href="@Model.prospekt_link" target="_blank">@Html.DisplayFor(model => model.prospekt_link)</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.upatstvo_link)
        </dt>

        <dd>
            <a href="@Model.upatstvo_link" target="_blank">@Html.DisplayFor(model => model.upatstvo_link)</a>
        </dd>

    </dl>
</div>

<div class="btn-group" role="group">
    <button type="button" class="btn btn-secondary">@Html.ActionLink("Измени", "Izmeni", new { id = Model.Id })</button>
    <button type="button" class="btn btn-secondary">@Html.ActionLink("Избриши", "Izbrishi", new { id = Model.Id })</button>
    <button type="button" class="btn btn-secondary">@Html.ActionLink("Назад кон листата", "Index")</button>
</div>