    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Избриши" class="btn btn-danger" />
        </div>
    }

    <div class="btn-group" role="group" style="margin-top:10px">
        <button type="button" class="btn btn-secondary">@Html.ActionLink("Назад кон листата", "Index")</button>
    </div>

